{
    "editor.fontFamily": "'Cascadia Code PL', Consolas, 'Courier New', monospace",
    // Insert spaces when pressing Tab. This setting is overriden
    // based on the file contents when `editor.detectIndentation` is true.
    "editor.insertSpaces": true,

    "diffEditor.ignoreTrimWhitespace": false,

    "terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
    "terminal.integrated.fontFamily": "'Cascadia Code PL', Consolas, 'Courier New', monospace",
    
    // Use the splitted editor when modifying the settings in JSON.
    // The splitted editor shows the default settings and gives a lot of hints.
    // This makes configuring the settings in vscode just like in sublime text.
    "workbench.settings.useSplitJSON": true,

    // Specifies the default line ending for new files.
    "files.eol": "\n",      // UNIX Style
    "files.hotExit": "off",
    
    "window.restoreWindows": "none",

    // Language specific configurations
    "[python]": {
        "editor.rulers": [
            120
        ]
    },

    "[javascript]": {
        "editor.rulers": [
            120
        ]
    },

    "javascript.implicitProjectConfig.experimentalDecorators": true,

    "[typescript]": {
        "editor.rulers": [
            120
        ]
    },

    "[php]": {
        "editor.rulers": [
            120
        ]
    },

    "[shellscript]": {
        "editor.rulers": [
            120
        ]
    },

    "[html]": {
        // The number of spaces a tab is equal to. This setting is overridden
        // based on the file contents when `editor.detectIndentation` is true.
        "editor.tabSize": 2,
    },

    "[css]": {
        "editor.rulers": [
            80
        ],
        "editor.tabSize": 2,
    },

    "[scss]": {
        "editor.rulers": [
            120
        ],
        "editor.tabSize": 2,
    },
}