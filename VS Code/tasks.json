{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch & Compile SCSS Folder (Production)",
      "type": "shell",
      "command": "sass --no-source-map --style=compressed --watch scss/:css/",
      "group": "build"
    },
    {
      "label": "Watch & Compile SCSS Folder (Debugging)",
      "type": "shell",
      "command": "sass --style=expanded --watch scss/:css/",
      "group": "build"
    }
  ]
}

