(defcfg
  input  (device-file "/dev/input/by-id/usb-Logitech_USB_Receiver-event-kbd")
  output (uinput-sink "kmonad-logi-mx-keys")

  ;; Comment this if you want unhandled events not to be emitted
  fallthrough true

  ;; Set this to false to disable any command-execution in KMonad
  allow-cmd false
)

(defsrc
  esc  f1   f2   f3   f4   f5   f6   f7   f8   f9   f10  f11  f12
  grv  1    2    3    4    5    6    7    8    9    0    -    =    bspc  ins  home pgup  nlck kp/  kp*  kp-
  tab  q    w    e    r    t    y    u    i    o    p    [    ]    ret   del  end  pgdn  kp7  kp8  kp9  kp+
  caps a    s    d    f    g    h    j    k    l    ;    '    \                          kp4  kp5  kp6
  lsft lsgt z    x    c    v    b    n    m    ,    .    /         rsft       up         kp1  kp2  kp3  kprt
  lctl lmet lalt           spc                           ralt wkup rctl  left down rght  kp0  kp.
)


(defalias
  lshl  (tap-next lsft (layer-toggle left-shift-layer))
  rshl  (tap-next rsft (layer-toggle right-shift-layer))
  lsul  (tap-next lmet (layer-toggle left-super-layer))
)


(deflayer default
  _     _     _    _    _    _    _    _    _    _    _    _    _
  _     _     _    _    _    _    _    _    _    _    _    _    _    _     _    _    _    _    _    _    _
  _     _     _    _    _    _    _    _    _    _    _    _    _    _     _    _    _    _    _    _    _
  _     _     _    _    _    _    _    _    _    _    _    _    _                         _    _    _
  @lshl _     _    _    _    _    _    _    _    _    _    _         @rshl      _         _    _    _    _
  _     @lsul _              _                             _    _    _     _    _    _    _    _
)

(deflayer left-shift-layer
  S-esc  S-f1   S-f2   S-f3   S-f4   S-f5   S-f6   S-f7   S-f8   S-f9   S-f10  S-f11  S-f12
  S-grv  S-1    S-2    S-3    S-4    S-5    S-6    S-7    S-8    S-9    S-0    S--    S-=    S-bspc  S-ins  S-home S-pgup  S-nlck S-kp/  S-kp*  S-kp-
  S-tab  S-q    S-w    S-e    S-r    S-t    S-y    S-u    S-i    S-o    S-p    S-[    S-]    S-ret   S-del  S-end  S-pgdn  S-kp7  S-kp8  S-kp9  S-kp+
  del    S-a    S-s    S-d    S-f    S-g    S-h    S-j    S-k    S-l    S-;    S-'    S-\                                  S-kp4  S-kp5  S-kp6
  _      S-lsgt S-z    S-x    S-c    S-v    S-b    S-n    S-m    S-,    S-.    S-/           _              S-up           S-kp1  S-kp2  S-kp3  S-kprt
  S-lctl S-lmet S-lalt                        S-spc                            S-ralt _      S-rctl  S-left S-down S-rght  S-kp0  S-kp.
)

(deflayer right-shift-layer
